      <h2><%= pluralize(@translation.errors.count, "error") %> prohibited this translation from being saved:</h2>

      <ul>
      <% @translation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :source_language %>
    <%= form.text_field :source_language %>
  </div>

  <div class="field">
    <%= form.label :target_languages %>
    <%= form.text_field :target_languages %>
  </div>

  <div class="field">
